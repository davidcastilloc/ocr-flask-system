{% extends "layout.jinja2" %}
{% block content %}
<table class="table table-sm">
    <thead>
        <tr>
            <th id="tienda-col" scope="col" class="text-left">Tienda</th>
            <th scope="col">Producto</th>
            <th scope="col" class="text-center">Precio Online</th>
        </tr>
    </thead>
    <tbody>
        {% for store in stores %}
        <tr>
            <th class="text-center align-middle">
                <figure class="figure">
                    <img id="logo-store" class="figure-img img-fluid rounded" src={{"https://microservicio.compymedics.site/static/img/stores/"~store.photo }}>
                </figure>
            </th>
            <td class="text-center align-middle">
                <div class="d-flex text-truncate p-0 m-0 ">
                    <div class="align-self-center">
                        <figure class="figure">
                            <img height="50px" width="50px" class="figure-img img-fluid rounded" src="{{
                                store.product.photo }}"
                                onerror="this.src='data:image/png;base64,';">
                        </figure>
                        {{ store.product.name }}
                    </div>
                </div>
            </td>
            <td class="text-center align-middle">S/ {{ store.product.price }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}