{% extends "layout.jinja2" %}
{% block content %}
<style>

</style>
    <table class="table table-sm">
        <thead>
        <tr>
            <th id="tienda-col" scope="col" class="text-left">Tienda</th>
            <th scope="col">Producto</th>
            <th scope="col" class="text-center">Precio Online</th>
        </tr>
        </thead>
        <tbody>
        {% for store in stores %}
            <tr>
                <th class="text-left">
                    <figure class="figure">
                        <img
                            id="logo-store"
                            class="figure-img img-fluid rounded"
                            src={{ url_for('compare_feature_blueprint.static', filename='img/stores/',
                                _external = True) ~ store.photo }}
                        >
                    </figure>
                </th>
                <td>
                <div class="d-flex p-0 m-0">
                    <div class="align-self-center">
                        <figure class="figure">
                            <img
                                height="50px"
                                width="50px"
                                class="figure-img img-fluid rounded"
                                src={{ store.product.photo }}
                                onerror="this.src='data:image/png;base64,';"
                            >
                        </figure>
                    </div>
                    <div class="col-10">
                        <span>
                            <h6>{{ store.product.name }}</h6>
                        </span>
                    </div>
                </div>
                </td>
                <td style="vertical-align: middle;" class="text-center">{{ store.product.get_price_formated() }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}